.search-and-sort-block {
  position: fixed;
  margin: 0;
  width: 100%;
  z-index: 999;
}

.search-bar-block {
  width: 100%;
  height: 100rpx;
  background-color: rgb(246, 182, 45);
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.function-block {
  width: 100%;
  z-index: 999;
  position: relative;
  background-color: rgb(248, 245, 240);
}

