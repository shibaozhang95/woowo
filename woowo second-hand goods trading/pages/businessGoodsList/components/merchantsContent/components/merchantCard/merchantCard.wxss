.merchant-card-container {
  width: 100%;
  height: auto;
}

.merchant-info-block {
  width: 100%;
  height: 130rpx;
  background-color: rgb(255, 255, 255);
  margin-bottom: 2rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(136, 193, 211);
  margin: 0 20rpx 0 36rpx;
}

.basic-info-block {
  width: 390rpx;
  height: 100rpx;
}

.shop-name {
  max-width: 390rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: rgb(44, 62, 80);
  margin-bottom: 4rpx;
}

.shop-brief {
  max-width: 390rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.5);
}

.follow-btn {
  box-sizing: border-box;
  margin-left: 30rpx;
  width: 146rpx;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 20rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(44, 62, 80);
  border: 2rpx solid rgb(44, 62, 80);
}

.follow-btn-following {
  color: rgba(44, 62, 80, 0.5);
  background-color: rgb(255, 255, 255);
  border: 2rpx solid rgba(44, 62, 80, 0.5);
}

.merchant-goods-block {
  width: 100%;
  height: auto;
  padding: 60rpx 0 36rpx 10rpx;
  display: flex;
  flex-flow: row nowrap;
  background-color: rgb(255, 255, 255);
  
}

.loading-block,
.nothing-block {
  width: 100%;
  height: 326rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.tips {
  height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  color: rgba(44, 62, 80, 0.8);
}

.loading-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  display: block;
}

merchant-goods-card {
  margin-right: 6rpx;
}