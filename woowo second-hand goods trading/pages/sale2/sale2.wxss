@import "../sale/sale.wxss";
.container {
  width: 750rpx;
  overflow: hidden;
  position: relative;
}
.contact-title {
  margin: 24rpx 36rpx 18rpx 36rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.5);
}

.other-inf-fnt .fnt-btn {
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgb(246, 182, 45);
  color: rgb(44, 62, 80);
  font-size: 24rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
  
}
.other-inf-fnt .reupload-qrcode-btn,
.other-inf-fnt .validated-fnt-btn {
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgb(246, 182, 45);
  color: #fff;
  font-size: 24rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.other-inf-fnt .validating-fnt-btn {
  background-color: rgba(44, 62, 80, 0.2)
}
.other-inf-fnt .fnt-icon {
  width: 30rpx;
  height: 26rpx;
  margin: 10rpx 4rpx 6rpx 14rpx;
  float: left;
  text-align: left;
  float: left;
}


.get-current-location {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: rgb(44, 62, 80);
  margin: 26rpx 0 20rpx 0;
  float: left;
}
.get-current-location-icon {
  float: left;
  width: 20rpx;
  height: 26rpx;
  /* background-color: red; */
  margin-top: 28rpx;
  margin-left: 4rpx;
}

.other-inf-location {
  width: 100%;
  height: 180rpx;
  background: #fff;
  overflow: hidden;
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.1);
}
.location-inf {
  margin: 12rpx 36rpx;
  width: 80%;
  float: left;
  line-height: 44rpx;
  font-size: 32rpx;
  text-align: left;
  color: rgba(44, 62, 80, 0.5); 
}

.section-warning {
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: rgba(44, 62, 80, 0.5);
  text-align: center;
  margin: 40rpx auto 52rpx auto;
}
.submit-btn {
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  text-align: center;
  margin: 0 auto;
  border: none;
  border-radius: 40rpx;
  background-color: rgb(246, 182, 45);
  color: rgb(44, 62, 80);
  margin-bottom: 32rpx;
}

.normal-hover {
  background-color: rgba(44, 62, 80, 0.2);
}

.qr-code-canvas {
  width: 750rpx;
  height: 1334rpx;
  /* 667 * 2 = 1334 */
  position: absolute;
  left: 750rpx;
  top: 0;
}


.save-info-line {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  align-content: center;
  justify-items: center;
  background-color: rgba(44, 62, 80, 0.1)
}

.save-info-btn {
  width: 236rpx;
  height: 40rpx;
  line-height: 36rpx;
  margin: auto;
  border: 2rpx solid rgba(44, 62, 80, 0.5);
  border-radius: 20rpx;
  color: rgba(44, 62, 80, 0.5);
  font-size: 24rpx;
  background-color: #fff;
  text-align: center;
}

.save-info-btn-active {
  border: 2rpx solid rgb(246, 182, 45);
  color: #fff;
  background-color: rgb(246, 182, 45);
}