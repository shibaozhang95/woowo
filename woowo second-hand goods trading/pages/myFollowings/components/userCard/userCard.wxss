.user-card-container {
  width: 100%;
  height: 150rpx;
}

.following-avatar {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 16rpx 32rpx 14rpx 42rpx;
  background-color: rgb(136, 193, 211);
  border-radius: 60rpx;
}
.following-inf {
  float: left;
  width: 334rpx;
  overflow: hidden;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.following-inf-name {
  display: block;
  max-width: 334rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgb(44, 62, 80);
  margin: 54rpx 0 52rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.following-shop-name {
  max-width: 280rpx;
}

.following-fnt {
  float: right;
  /* overflow: hidden; */
}
.following-fnt button {
  width: 150rpx;
  height: 50rpx;
  line-height: 46rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  margin: 50rpx 60rpx 50rpx auto;
  padding: 0;
}
.unfollow-btn {
  background-color: #fff;
  color: rgba(44, 62, 80, 0.5);
  border: 2rpx solid rgba(44, 62, 80, 0.5);
}
.follow-btn {
  background-color: rgba(44, 62, 80, 1);
  color: #fff;
  border: 2rpx solid rgba(44, 62, 80, 1);
}

.shop-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgb(246, 182, 45);
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  margin-left: 10rpx;
  border-radius: 10rpx;
}