.upload-img-block {
  width: 100%;
  height: 230rpx;
  position: relative;
  background-color: rgba(44, 62, 80, 0.2);
}

.background-img {
  width: 100%;
  height: 100%;
}

.avatar-block {
  position: absolute;
  left: 60rpx;
  bottom: 20rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: rgb(44, 62, 80);
  border-radius: 50%;
  overflow: hidden;
  z-index: 9;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
}

.avatar-upload-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  z-index: 9;
}

.avatar-upload-icon {
  width: 50rpx;
  height: 40rpx;
  margin: 16rpx 0 6rpx 0;
}

.avatar-hint-text {
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: rgb(255, 255, 255);
}

.bg-upload-btn {
  width: 300rpx;
  height: 40rpx;
  position: absolute;
  right: 36rpx;
  bottom: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
  z-index: 9;
}

.bg-upload-icon {
  width: 50rpx;
  height: 40rpx;
  margin-left: 17rpx;
}

.bg-hint-text {
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  height: 32rpx;
  line-height: 32rpx;
  text-align: right;
}

.name-and-brief-block {
  width: 100%;
  height: auto;
  margin-bottom: 52rpx;
}
.name-block {
  padding-top: 32rpx;
  background-color: rgb(255, 255, 255);
  margin-bottom: 2rpx;
}

.brief-block {
  background-color: rgb(255, 255, 255);
  /* padding-bottom: 100rpx; */
}

.confirm-btn {
  width: 600rpx;
  height: 70rpx;
  border-radius: 40rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 36rpx;
  color: rgb(44, 62, 80);
  background-color: rgb(246, 182, 45);
}