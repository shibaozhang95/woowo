.sharing-block {
  overflow: hidden;
  margin: 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
  justify-content: center
}
.sharing-item {
  margin: 0 26rpx;
  width: 160rpx;
  overflow: hidden;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}
.sharing-item-icon {
  width: 90rpx;
  height: 80rpx;
  margin-bottom: 4rpx;
  float: left;
}
.sharing-item-icon-2 {
  width: 90rpx;
  height: 80rpx;
  margin-bottom: 4rpx;
  float: left;
  border:none;
  padding: 0;
  opacity: 0;
  position: absolute;
}

.sharing-item-title {
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
  text-align: center;
  color: rgb(44, 62, 80);
  float: left;
}

