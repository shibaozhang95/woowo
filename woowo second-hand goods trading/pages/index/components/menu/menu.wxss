.menu-swiper,
.menu-swiper-item {
  width: 100%;
  height: 492rpx;
  background-color: #fff;
}

.one-menu-block {
  width: 100%;
  height: 448rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.extra-m-item {
  width: 172rpx;
  height: 164rpx;
  margin: 30rpx 0;
  /* color: red;
  background-color: red; */
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.extra-menu-icon {
  width: 172rpx;
}
.m-item {
  width: 140rpx;
  margin: 30rpx 16rpx;
  position: relative;
  
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: center;
  z-index: 0;
}

.m-item::after {
  content: '';
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  top: -16rpx;
  left: 6rpx;
  background-color: rgba(44, 62, 80, 0.0);
  border-radius: 130rpx;
  z-index: 1;
}
.m-item:active::after, 
.m-item:focus::after,
.m-item:hover:active::after {
  background-color: rgba(44, 62, 80, 0.1);
  /* opacity: 1; */
}
.m-item .menu-nav-block {
  position: relative;
  z-index: 2;
}
.m-item .menu-icon {
  width: 140rpx;
  height: 100rpx;
  display: block;
}
.m-item .menu-txt {
  display: block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgb(44, 62, 80);
  text-align: center;
  margin-top: 24rpx;
  white-space: nowrap;
}