.popular-goods-container {
  width: 100%;
  overflow: hidden;
  border-radius: 20rpx;
  background: linear-gradient(to bottom, rgb(246, 182, 45), rgba(255, 255, 255, 0.98));
  box-shadow: 0 6rpx 6rpx 0 rgba(44, 62, 80, 0.1);
}

.block-title {
  height: 44rpx;
  line-height: 44rpx;
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  margin: 12rpx 0 14rpx 24rpx;
}
.block-content {
  margin-bottom: 24rpx;
}
.popular-scroll-block {
  margin: 0 10rpx;
  width: 100%;
  height: 320rpx;
  /* padding: 0 4rpx 0 10rpx; */
  display: flex;
  flex-direction: row;
}
.goods-item {
  margin-right: 6rpx; 
  /* float: left; */
}
.goods-item:first {
  margin-left: 10rpx;
}
.goods-item:last-child {
  margin-right: 10rpx;
}