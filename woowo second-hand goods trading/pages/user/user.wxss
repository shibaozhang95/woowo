
.section-user-inf {
  width: 100%;
  min-height: 230rpx;
  background-color: rgb(246, 182, 45);
  margin-bottom: 70rpx;
  overflow: hidden;
}

.block-basic-inf {
  width: 100%;
  height: 120rpx;
  margin: 40rpx 58rpx 70rpx 58rpx;
}

.basic-inf {
  float: left;
}

.block-basic-inf .avatar {
  background-color: rgb(246, 240, 227);
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.block-basic-inf .username {
  height: 50rpx;
  line-height: 50rpx;
  margin: 36rpx 20rpx 34rpx 40rpx;
  color: rgb(44, 62, 80);
  font-size: 36rpx;
}

.block-basic-inf .user-type {
  width: 34rpx;
  height: 34rpx;
  margin: 44rpx 0 42rpx 0;
}

.section-user-fnct .block {
  width: 100%;
  border-top: 1rpx solid rgba(44, 62, 80, 0.08);
  margin-bottom: 40rpx;
  /* background-color: #fff; */
}

.section-user-fnct .block-line {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.08);
  padding: 0 40rpx;
  background-color: #fff;
}

.block-line-icon {
  width: 70rpx;
  height: 50rpx;
  margin: 16rpx 0 auto 0;
  float: left;
}

.block-line-txt {
  float: left;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgb(44, 62, 80);
  margin: 18rpx 0 18rpx 26rpx;
}

.block-line-notification {
  float: left;
  height: 40rpx;
  padding: 0 8rpx;
  min-width: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: rgb(246, 182, 45);
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  margin: 18rpx 0 18rpx 30rpx;
  border-radius: 20rpx
}

#clearBtn{
  border:none;
  border-radius:0px;
}
button::after{ border: none; }

/* For collecting formId */
.collect-form {
  
  width: 100%;
  height: 100%;
}

.collect-btn {
  width: auto;
  height: auto;
  border: none;
  outline: none;
  text-align: unset;
  margin: 0;
  padding: 0;
  background-color: rgba(0, 0, 0, 0)
}

.collect-btn::after{ border: none; }