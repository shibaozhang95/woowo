view, textarea, text {
  box-sizing: content-box;
}

.input-count-container {
  background-color: rgb(255, 255, 255);
  box-sizing: content-box;
}

.input-block {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.input-block input {
  width: 550rpx;
  height: 44rpx;
  line-height: 44rpx;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.5);
}

.input-count {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: right;
  color: rgba(44, 62, 80, 0.8);
}

.input-placehoder {
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.3);
}

.textarea-block {
  width: 100%;
  height: auto;
  padding: 28rpx 40rpx;
}

.textarea-block textarea {
  box-sizing: content-box;
  width: calc(100% - 40px);
  /* height: 44rpx; */
  line-height: 44rpx;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.5);
}

.textarea-count {
  width: calc(100% - 40px);
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.8);
  text-align: right;
}