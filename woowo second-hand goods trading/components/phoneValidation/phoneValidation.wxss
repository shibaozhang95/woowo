.validation-block {
  width: 340rpx;
  height: 236rpx;
  margin: 300rpx auto;
  background-color: #fff;
  border-radius: 40rpx;
  overflow: hidden;
}

.validation-title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  margin: 18rpx auto 32rpx auto;
  text-align: center;
  color: rgb(44,62, 80);
}

.validation-input {
  width: 100%;
  height: 50rpx;
  margin-bottom: 34rpx;
}

.validation-input input {
  display: block;
  width: 300rpx;
  margin: 0 auto;
  border: 2rpx solid rgba(44, 62, 80, 0.1);
  height: 50rpx;
  color: rgb(44, 62, 80);
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 0 10rpx;
  /* letter-spacing: 8rpx; */
}

.validation-error {
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  margin-bottom: 14rpx;
  color: rgba(44, 62, 80, 0.5)
}

.validation-fnt {
  width: 100%;
  border-top: 2rpx solid rgba(112, 112, 112, 0.2);
  overflow: hidden;
}
.validation-fnt-btn {
  float: left;
  width: 50%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: rgba(44, 62, 80, 1);
  font-size: 32rpx
}
.validation-fnt-confirm {
  
  border-right: 2rpx solid rgba(112, 112, 112, 0.2);
  border-bottom-left-radius: 40rpx;
  background-color: rgb(246, 182, 45);
}
.validation-fnt-cancel {
  background-color: #fff;
  border-bottom-right-radius: 40rpx;
}
