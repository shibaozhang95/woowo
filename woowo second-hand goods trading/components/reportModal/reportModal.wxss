.report-modal-block {
  width: 340rpx;
  /* height: 520rpx; */
  background-color: rgb(255, 255, 255);
  border-radius: 40rpx;
  margin: 244rpx auto auto auto;
  overflow: hidden;
}

.report-title {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  margin: 36rpx 0 32rpx 0;
  font-size: 32rpx;
  color: rgb(246, 182, 45);
  text-align: center;
}

.report-content {
  width: 100%;
  overflow: hidden;
  padding: 0 56rpx 60rpx 56rpx;
  position: relative;
}

.report-item {
  width: 100%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.report-item-icon {
  width: 34rpx;
  height: 34rpx;
  border: 2rpx solid rgb(44, 62, 80);
  border-radius: 32rpx;
  margin: 4rpx 24rpx 4rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.report-item-icon-chosen {
  width: 16rpx;
  height: 16rpx;
  border-radius: 16rpx;
  background-color: rgb(246, 182, 45);
  /* margin: 6rpx; */
}
.report-item-title {
  line-height: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.5);
}
.report-item-title-chosen {
  color: rgb(44, 62, 80);
}

.other-reason-inpt {
  position: absolute;
  width: 300rpx;
  height: 44rpx;
  line-height: 40rpx;
  padding: 0;
  min-height: 44rpx;
  border: 2rpx solid rgba(44, 62, 80, 0.1);
  left: 20rpx;
  bottom: 26rpx;
  font-size: 24rpx;
  color: rgba(44, 62, 80, 0.5);
  text-align: center;
}

.report-fnt {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.report-fnt-btn {
  width: 169rpx;
  height: 62rpx;
  border-top: 2rpx solid rgba(44, 62, 80, 0.1);
  color: rgb(44, 62, 80);
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
}
.report-fnt-confirm {
  border-right: 2rpx solid rgba(44, 62, 80, 0.1);
}
.modal-btn-hover {
  background-color: rgb(246, 182, 45);
}