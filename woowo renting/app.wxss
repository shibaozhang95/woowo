/**app.wxss**/
page {
  height: 100%;
  background-color: rgb(248, 245, 240);
}
.container {
  width: 100%;
  /* overflow: hidden; */
  box-sizing: border-box;
  z-index: 0;
} 

view, text, swiper, textarea, input {
  /* box-sizing: border-box; */
  font-family: 'Heiti, Microsoft Yahei';
  padding: 0;
  margin: 0;
}

.normal-hover {
  opacity: 0.7 !important;
}

.bussiness-tag {
  width: 40rpx;
  height: 40rpx;
  color: rgb(255, 255, 255);
  line-height: 40rpx;
  background-color: rgb(246, 182, 45);
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

/*
* THIS IS COMMON CSS FOR POST RELATED PAGE
*/
.post-container {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 0;
  margin-bottom: 60rpx;
}

.post-container .section {
  margin-top: 40rpx;
}

.post-container .section-title {
  height: 44rpx;
  line-height: 44rpx;
  margin-left: 40rpx;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: rgb(44, 62, 80);
  font-weight: bold;
}

.post-container .section-form {
  border-top: 2rpx solid rgba(44, 62, 80, 0.1);
}

.post-container .section-form-line {
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.1);
}

/*
* THIS IS FOR POST ICON
*/

.post-icons-block {
  width: 720rpx;
  height: auto;
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.1);
  background-color: rgb(255, 255, 255);
  padding: 40rpx 14rpx 40rpx 16rpx;
  display: flex;
  flex-flow: row wrap;
}

.post-icons-block .icon-item {
  opacity: 0.3;
  width: 180rpx;
  height: 110rpx;
  position: relative;
}

.post-icons-block .icon-item-active {
  opacity: 1;
}

.post-icons-block .icon {
  width: 180rpx;
  height: 110rpx;
  display: block;
}

.post-icons-block .icon-text {
  width: 100%;
  height: 28rpx;
  line-height: 26rpx;
  position: absolute;
  font-size: 20rpx;
  text-align: center;
  left: 0;
  bottom: 10rpx;
  color: rgb(44, 62, 80);
}

