/*
* THIS IS FOR THE NEXT BUTTOM
*/

.post-next-btn-block {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  border-top: 2rpx solid rgba(112, 112, 112, 0.1);
  overflow: hidden;
  background-color: rgb(255, 255, 255);
}

.post-next-btn-block .post-next-btn {
  width: 660rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgb(255, 255, 255);
  margin: 16rpx auto 14rpx auto;
  border-radius: 46rpx;
}

.post-next-btn-block-enable .post-next-btn {
  background-color: rgb(246, 182, 45);
}

.post-next-btn-block-disable .post-next-btn {
  background-color: rgb(222, 225, 228);
}