page {
  background-color: rgb(255, 255, 255);
}

.nav-list {
  width: 100%;
  margin-top: 50rpx;
}

.nav-block {
  width: 640rpx;
  height: 120rpx;
  background-color: rgb(255, 255, 255);
  margin: 0 auto 40rpx auto;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
  border-radius: 10rpx;
}

.nav-icon {
  width: 100rpx;
  height: 70rpx;
  margin: 26rpx 20rpx 24rpx 40rpx;
  float: left;
}

.nav-icon image {
  width: 100%;
  height: 100%;
}

.nav-title {
  width: 360rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 38rpx;
  color: rgb(55, 74, 94);
  margin: 40rpx 0;
  float: left;
}

.arrow-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 30rpx 30rpx 30rpx 0;
  float: right;
}

.arrow-icon image {
  width: 100%;
  height: 100%;
}

.normal-hover {
  opacity: 0.7;
}