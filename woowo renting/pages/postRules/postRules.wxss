page {
  background-color: rgb(248, 245, 240);

  animation-name: appear;
  animation-duration: 2s;
  animation-iteration-count: 1;
}

@keyframes appear {
  from {opacity: 0;}
  to {opacity: 1;}
}

.special-switch {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.special-switch-left {
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.special-switch-right {
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
}

.special-switch-title {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.8);
}

.special-switch .switch-ifself {
  margin-left: 80rpx;
}
