page {
  background-color: rgb(248, 245, 240);
}

.container {
  position: relative;
}

.location-form {
  width: 100%;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}

.location-form-line {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.1);
}

.location-input-area-block {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.location-input-area-block .title {
  width: 64rpx;
  white-space: nowrap;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.8);
}

.location-input-area-block input {
  width: 388rpx;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0;
  margin: 0;
  border: none;
  font-size: 32rpx;
  color: rgb(44, 62, 80);
}

.get-current-location {
  width: 168rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: relative;
}

.get-current-location .tips {
  height: 34rpx;
  line-height: 34rpx;
  text-align: left;
  color: rgba(44, 62, 80, 0.8);
  font-size: 24rpx;
}

.get-current-location .icon {
  width: 20rpx;
  height: 26rpx;
  position: absolute;
  top: -2rpx;
  right: 0;
  /* background-color: red; */
}

.results-tips {
  position: absolute;
  top: 102rpx;
  width: 100%;
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  z-index: 1;
}

.loading { 
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
}
.loading-text {
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-left: 30rpx;
  color: rgba(44, 62, 80, 0.3);
}

.location-suggestion-block {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 99;
  /* width: 100%;
  height: auto; */
  background-color: rgb(255, 255, 255);
}

.no-result,
.get-results {
  /* position: absolute;
  top: 0;
  left: 0; */
  margin-right: 40rpx;
  font-size: 32rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-left: 40rpx;
  color: rgba(44, 62, 80, 1);
}

.one-suggestion {
  width: 100%;
  height: 100rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.one-suggeston-border {
  width: 100%;
  height: 2rpx;
  background-color: rgba(112, 112, 112, 0.1);
}

.one-suggestion .icon {
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(86, 182, 213, 0.49);
  border-radius: 50%;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgb(44, 62, 80);
}

.one-suggestion .format-address {
  margin-left: 36rpx;
  width: 584rpx; /* 375 - 20 - 20 - 25 - 18*/
  height: 44rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: rgb(44, 62, 80);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.choose-location {
  background-color: rgba(86, 182, 213, 0.5);
}




