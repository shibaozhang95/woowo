.user-card-container {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background-color: rgb(255, 255, 255);
}

.avatar {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgb(136, 193, 211);
}

.username-block {
  width: 340rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin: 0 30rpx;
}

.username {
  max-width: 280rpx;
  height: 44rpx;
  margin-right: 20rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgb(44, 62, 80);
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
}

.bussiness-tag {
  width: 40rpx;
  height: 40rpx;
  color: rgb(255, 255, 255);
  line-height: 40rpx;
  background-color: rgb(246, 182, 45);
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.fnt-btn {
  width: 150rpx;
  height: 50rpx;
  box-sizing: border-box;
  line-height: 46rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 40rpx;
}

.fnt-btn-unfollow {
  background-color: rgb(255, 255, 255);
  color: rgba(44, 62, 80, 0.5);
  border: 2rpx solid rgba(44, 62, 80, 0.5);
}

.fnt-btn-follow {
  background-color: rgb(44, 62, 80);
  color: rgb(255, 255, 255);
  border: 2rpx solid rgb(44, 62, 80);
}

.normal-hover {
  opacity: 0.7;
}