.hot-housing-stock-container {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.title-block {
  width: 640rpx;
  height: 44rpx;
  margin: 0 auto 30rpx auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-end;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
  color: rgb(44, 62, 80);
}

.view-more-block {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.view-more-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgb(246, 182, 45);
}
.view-more-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  transform: rotate(90deg)
}

.stock-container {
  width: 100%;
  height: 256rpx;
}

.stock-container scroll-view {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.stock-container .stock-block {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
}

.hot-apt-item {
  /* width: 310rpx;
  height: 100%; */
  margin: 0 10rpx;
}

.hot-apt-item-margin {
  width: 56rpx;
  height: 100%;
  opacity: 0;
}

.hot-apt-item:first-child {
  margin-left: 56rpx;
}

.hot-apt-item:last-child {
  margin-right: 0;
}

.loading-block,
.nothing-block {
  width: 100%;
  height: 256rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  display: block;
}

.loading-text,
.nothing-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.5);
}
