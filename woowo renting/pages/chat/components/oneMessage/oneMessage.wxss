.one-message-container {
  width: 100%;
  height: auto;
  margin-bottom: 40rpx;
}

.message-time {
  width: 100%;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(44, 62, 80, 0.5);
  margin-bottom: 20rpx;
}

.message-content-block {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
}

.message-content-block .user-avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 0 20rpx 0 40rpx;
}

.message-content-block .user-avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: rgb(136, 193, 211);
}

.message-content-block .message-bubble {
  max-width: 400rpx;
  height: auto;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
  border-radius: 10rpx;
  overflow: hidden;
}

.message-content-block .message-bubble-text {
  padding: 20rpx;
  font-size: 28rpx;
  text-align: left;
  line-height: 40rpx;
  color: rgb(44, 62, 80);
}

.message-content-block .message-bubble-image {
  /* width: auto;
  height: auto; */
  max-width: 400rpx;
  display: block;
}

.message-content-own {
  flex-flow: row-reverse nowrap;
}

.message-content-own .user-avatar {
  margin: 0 40rpx 0 20rpx;
}

.message-content-own .user-avatar image {
  background-color: rgb(44, 62, 80);
}

.message-content-own .message-bubble {
  background-color: rgb(233, 243, 246);
}

.loading-icon-block,
.failed-icon-block {
  margin-right: 20rpx;
  position: relative;
}

.loading-icon,
.failed-icon {
  width: 40rpx;
  height: 40rpx;
}

.failed-btn-block {
  position: absolute;
  top: -70rpx;
  left: -62rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
  display: flex;
  flex-flow: row nowrap;
  background-color: rgb(248, 245, 240);
}

.resend-btn, .delete-btn {
  width: 80rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 66rpx;
  color: rgb(44, 62, 80);
  text-align: center;
  position: relative;
  background-color: rgb(255, 255, 255);
}

.resend-btn {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  
}
.delete-btn {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.resend-btn-hover, .delete-btn-hover {
  background-color: rgba(86, 182, 213, 0.5);
}
