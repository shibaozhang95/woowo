.filter-container {
  background-color: rgb(255, 255, 255);
  position: relative;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.filter-fnt-block {
  width: 100%;
  padding: 0 26rpx;
  box-sizing: border-box;
  height: 102rpx;
  border-top: 2rpx solid rgba(112, 112, 112, 0.1);
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.filter-reset-block {
  width: 240rpx;
}


.filter-confirm-block {
  width: 440rpx;
}

.filter-reset-bottom {
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(44, 62, 80);
  border-radius: 46rpx;
  margin: 16rpx 0 14rpx 0;
  text-align: center;
}

.filter-confirm-bottom {
  width: 440rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(246, 182, 45);
  border-radius: 46rpx;
  margin: 16rpx 0 14rpx 0;
  text-align: center;
}
