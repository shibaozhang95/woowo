.post-container {
  background-color: rgb(248, 245, 240);
}
.personal-info-block {
  width: 100%;
  /* height: 460rpx; */
  background-color: rgb(86, 182, 213);
  display: flex;
  flex-flow: column nowrap;
  justify-items: center;
  align-items: center;
  margin-bottom: 30rpx;
  overflow: hidden;
  margin-top: 0;
  margin-left: 0;
}

.user-avatar {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgb(246, 240, 227);
  margin: 40rpx 0 40rpx 0;
}

.username {
  width: 100%;
  height: 44rpx;
  line-height: 46rpx;
  font-size: 40rpx;
  margin-bottom: 40rpx;
  color: rgb(255, 255, 255);
  text-align: center;
}

.info-section .section:first-of-type {
  margin-top: 0;
}