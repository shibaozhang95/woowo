.container {
  position: relative;
  overflow: hidden;
  background-color: rgb(248, 245, 240);
  margin-bottom: 30rpx;
}

.images-block {
  width: 100%;
  height: 600rpx;
  background-color: rgb(44, 62, 80);
}

.images-block swiper,
.images-block swiper-item,
.images-block .housemate-img {
  width: 100%;
  height: 100%;
}

.info-block {
  overflow: hidden;
  width: 100%;
  height: auto;
  background-color: rgb(255, 255, 255);
  margin-bottom: 30rpx;
}

.personal-info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 40rpx 10rpx
}

.avatar {
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(136, 193, 211);
  margin-right: 30rpx;
}

.other-info {
  display: flex;
  flex-flow: column nowrap;
}

.username {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 40rpx;
  color: rgb(44, 62, 80);
  margin-bottom: 10rpx;
}

.status {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.gender-icon {
  margin-right: 4rpx;
}

.status-txt {
  font-size: 24rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: rgba(44, 62, 80, 0.49);
}

.post-date {
  margin: 0 40rpx 12rpx 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
}

.post-date-txt {
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: rgba(44, 62, 80, 0.5);
}

.preference-block,
.more-info-block {
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  margin-bottom: 30rpx;
}

.block-title {
  margin: 30rpx 40rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(44, 62, 80, 0.5);
}

.block-content {
  margin: 0 40rpx 30rpx 40rpx;
}

.content-line {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 20rpx;
  height: auto;
}

.item-title,
.item-txt {
  font-size: 28rpx;
  line-height: 44rpx;
  color: rgb(44, 62, 80);
}

.item-title {
  margin-right: 40rpx;
  white-space: nowrap;
  height: 44rpx;
}

.about-me-content {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

.rule-item {
  display: flex;
  flex-flow: row nowrap;
  margin-right: 50rpx;
  align-items: center;
}

.if-request-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.if-request-txt {
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgb(44, 62, 80);
}

.content-txt {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgb(44, 62, 80);
}

.contact-info-block {
  width: 100%;
  background-color: rgb(255, 255, 255);
  margin-bottom: 30rpx;
}

.function-bar-block {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
}
