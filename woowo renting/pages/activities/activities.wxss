.activity-banner {
  width: 100%;
  height: 400rpx;
  display: block;
}

.info-block {
  padding: 0 50rpx;
}
.txt-block-one {
  font-size: 28rpx;
  color: rgb(44, 62, 80);
  /* margin: 0 30rpx; */
  line-height: 28rpx;
}

.contact-block {
  margin: 40rpx 0 100rpx 0;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.contact-hint {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(44, 62, 80);
}

.contact-method {
  margin: 30rpx auto 40rpx auto;
}
.wechat-id {
  font-size: 32rpx;
  line-height: 44rpx;
  color: rgb(44, 62, 80);
  border: 2rpx solid rgb(44, 62, 80);
  padding: 0 30rpx;
  border-radius: 40rpx;
  height: 46rpx;
}

.touch-copy {
  color: #fff;
  border: 2rpx solid rgb(246, 182, 45);
  background-color: rgb(246, 182, 45);
}

.wechat-barcode {
  width: 300rpx;
  height: 300rpx;
}
