page {
  background-color: rgb(248, 245, 240);

  animation-name: appear;
  animation-duration: 2s;
  animation-iteration-count: 1;
}

@keyframes appear {
  from {opacity: 0;}
  to {opacity: 1;}
}

.personal-info-block {
  width: 100%;
  /* height: 460rpx; */
  background-color: rgb(86, 182, 213);
  display: flex;
  flex-flow: column nowrap;
  justify-items: center;
  align-items: center;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.user-avatar {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgb(246, 240, 227);
  margin: 40rpx 0 40rpx 0;
}

.username {
  width: 100%;
  height: 44rpx;
  line-height: 46rpx;
  font-size: 40rpx;
  margin-bottom: 40rpx;
  color: rgb(255, 255, 255);
  text-align: center;
}

.id-section {
  border-top: 2rpx solid rgba(44, 62, 80, 0.1);
}

.section-line {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  background-color: rgb(255, 255, 255);
  border-bottom: 2rpx solid rgba(44, 62, 80, 0.1);
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.8);
}

.section-input {
  width: 360rpx;
  /* margin: 0 20rpx; */
  height: 100rpx;
  line-height: 100rpx;
  padding: 0;
  border: none;
  font-size: 32rpx;
  color: rgba(44, 62, 80, 0.8);
}

.section-input-placeholder {
  color: rgba(44, 62, 80, 0.5);
}

.section-fnt-btn {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  text-align: center;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.btn-send-id-code,
.btn-upload-qr-code {
  color: rgb(255, 255, 255);
  background-color: rgb(86, 182, 213);
}
.btn-send-id-code-verifying,
.btn-upload-qr-code-uploading {
  color: rgb(44, 62, 80);
  background-color: rgba(44, 62, 80, 0.2);
}
.btn-send-id-code-verified,
.btn-upload-qr-code-uploaded {
  color: rgb(255, 255, 255);
  background-color: rgb(86, 182, 213);
}

.icon-yes {
  width: 30rpx;
  height: 26rpx;
  margin-top: 2rpx;
  margin-right: 4rpx;
  display: block;
}

.qr-code-block {
  width: 100%;
  height: 380rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.qr-code-image {
  width: 300rpx;
  height: 300rpx;
  display: block;
}

.save-info-block {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.save-info-btn {
  margin: 12rpx 0;
  width: 240rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 26rpx;
}

.save-info-btn-active {
  background-color: rgb(86, 182, 213);
  color: rgb(255, 255, 255);
  border: 2rpx solid rgb(86, 182, 213);
}

.save-info-btn-unactive {
  background-color: rgba(255, 255, 255, 0.5);
  color: rgba(44, 62, 80, 0.5);
  border: 2rpx solid rgba(44, 62, 80, 0.5);
}