.one-contact-container {
  width: 100%;
  height: 180rpx;
  padding: 30rpx 56rpx;
  background-color: rgb(255, 255, 255);
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
}

.contact-avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  background-color: rgb(136, 193, 211);
  border-radius: 60rpx;
}

.unread-red-pot {
  position: absolute;
  top: 0;
  left: 80rpx;
  min-width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: rgb(246, 182, 45);
  line-height: 36rpx;
  color: rgb(255, 255, 255);
  font-size: 26rpx;
  text-align: center;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.contact-content {
  width: 498rpx;
  height: 120rpx;
  margin-left: 20rpx;
  overflow: hidden;
}

.username-block {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin: 16rpx 0;
}

.contact-name {
  width: calc(100%-30px);
  height: 44rpx;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  line-height: 44rpx;
  color: rgb(44, 62, 80);
  margin-right: 20rpx;
}

.bussiness-tag {
  width: 40rpx;
  height: 40rpx;
  color: rgb(255, 255, 255);
  line-height: 40rpx;
  background-color: rgb(246, 182, 45);
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.contact-message {
  margin-bottom: 8rpx;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: left;
  line-height: 40rpx;
  color: rgba(44, 62, 80, 0.3);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}