.one-apt-edit-container {
  width: 640rpx;
  height: auto;
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  display: flex;
  flex-flow: row nowrap;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
}

.image-and-info-block {
  width: 530rpx;
  height: 270rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
}

.image-and-info-block .cover {
  width: 530rpx;
  height: 270rpx;
  display: block;
  background-color: grey;
}

.image-and-info-block .info-block {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 12rpx 30rpx 14rpx 30rpx;
  background: linear-gradient(to bottom, rgba(9, 12, 16, 0), rgba(44, 62, 80, 0.95));
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 9;
}

.edit-block {
  width: auto;
  height: auto;
  position: absolute;
  right: 20rpx;
  bottom: 14rpx;
  z-index: 10;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
}

.edit-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  margin-right: 10rpx;
}

.edit-icon {
  display: block;
  width: 24rpx;
  height: 24rpx;
}

.info-title {
  width: 470rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(255, 255, 255);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.info-types-block {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  display: flex;
  flex-flow: row nowrap;
}

.info-types-block .info-type {
  margin-right: 20rpx;
}

.fnt-block {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.fnt-btn {
  width: 110rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.seperate-line {
  width: 100rpx;
  height: 2rpx;
  background-color: rgb(248, 245, 240);
}

.fnt-btn-delete {
  color: rgb(146, 153, 160);
}
.fnt-btn-taking-on,
.fnt-btn-edit {
  color: rgb(246, 182, 45);
}
.fnt-btn-taking-off {
  color: rgb(86, 182, 213);
}

.fnt-btn-retop {
  color: rgb(246, 182, 45);
}
.fnt-btn-retop-disable {
  color: rgba(146, 153, 160, 0.5);
}

.btn-hover {
  background-color: rgba(44, 62, 80, 0.15);
}