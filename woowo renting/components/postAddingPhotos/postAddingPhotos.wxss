.adding-photos-container {
  width: 100%;
  height: 250rpx;
  background-color: rgba(44, 62, 80, 0.5);
}

.no-photo-block {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.camera-icon {
  width: 80rpx;
  height: 66rpx;
  display: block;
  margin: 48rpx auto 16rpx auto
}

.limits-tips {
  /* width: 190rpx; */
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  margin: 0 auto;
  text-align: center
}

.no-pic-warn {
  /* width: 280rpx; */
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: rgb(246, 182, 45);
  margin: 4rpx auto 48rpx auto;
}

.photos-block {
  position: relative;
  width: 100%;
  height: 100%;
}

.photos-swiper {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(44, 62, 80, 0.5);
}

.photos-swiper .photos-swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.deleting-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: block;
}

.adding-area-block {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to bottom, rgba(53, 89, 110, 0), rgba(44, 62, 80,0.8));
  display: flex;
  flex-flow: row nowrap;
}

.swiper-image {
  width: 100%;
  height: 100%;
  display: block;
}


.adding-camera-icon {
  width: 40rpx;
  height: 32rpx;
  display: block;
  margin: 32rpx 30rpx 16rpx 56rpx
}

.adding-limits-tips {
  width: auto;
  height: 34rpx;
  line-height: 34rpx;
  color: rgb(255, 255, 255);
  font-size: 24rpx;
  margin: 32rpx 0 14rpx 0;
}

.process-dot-block {
  width: 360rpx;
  height: 20rpx;
  position: absolute;
  right: 30rpx;
  bottom: 18rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
}

.process-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.process-dot-main {
  background-color: rgba(86, 182, 213, 1);
}

.process-dot-uploading {
  animation-name: sparkling;
  animation-duration: 400ms;
  animation-iteration-count: infinite;
  animation-direction: alternate;

}

@keyframes sparkling {
  from {opacity: 0;}
  to {opacity: 1;}
}
