.one-apt-small-container {
  width: 310rpx;
}

.apt-image {
  width: 310rpx;
  height: 180rpx;
  display: block;
  border-radius: 10rpx;
  background-color: rgba(44, 62, 80, 0.5);
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.16);
}

.apt-title {
  width: 100%;
  height: 38rpx;
  text-align: left;
  font-size: 28rpx;
  color: rgb(44, 62, 80);
  font-weight: bold;
  line-height: 38rpx;
  margin: 6rpx 0 2rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.apt-sub-title {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  text-align: left;
  color: rgba(44, 62, 80, 0.5);
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}